generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("User") // ðŸ‘ˆ maps to capitalized MongoDB collection
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String?
  name      String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

